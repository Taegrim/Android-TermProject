<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.SelectActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 레벨 : 1"
            android:textSize="20dp"
            android:textColor="@color/select_activity_current_level"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마법선택"
            android:textSize="40dp"
            android:textColor="@color/select_activity_magic_selection"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            />

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginBottom="6dp"
            >

            <ImageButton
                android:onClick="onBtnSelectAbility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/select_background"
                android:background="@null"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ability_thunder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:text="Lv 1"
                        android:textColor="@color/select_activity_current_level"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="낙뢰"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="주변 적에게 번개가 내리친다."
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginBottom="6dp"
            >

            <ImageButton
                android:onClick="onBtnSelectAbility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/select_background"
                android:background="@null"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ability_thunder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:text="Lv 1"
                        android:textColor="@color/select_activity_current_level"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="낙뢰"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="주변 적에게 번개가 내리친다."
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginBottom="6dp"
            >

            <ImageButton
                android:onClick="onBtnSelectAbility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/select_background"
                android:background="@null"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ability_thunder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:text="Lv 1"
                        android:textColor="@color/select_activity_current_level"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="낙뢰"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="주변 적에게 번개가 내리친다."
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            >
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/select_background"
                android:background="@null"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="선택하지 않는다."
                android:textSize="17dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                />

        </FrameLayout>




    </LinearLayout>

</RelativeLayout>