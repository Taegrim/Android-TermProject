<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".app.SelectActivity"
    android:id="@+id/content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/transparent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 레벨 : 1"
            android:textSize="20dp"
            android:textColor="@color/select_activity_next_level"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마법선택"
            android:textSize="40dp"
            android:textColor="@color/select_activity_magic_selection"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            />

        <FrameLayout
            android:id="@+id/firstOption"
            style="@style/select_option_frame_style">

            <ImageButton
                android:id="@+id/firstItem"
                android:onClick="onBtnSelectAbility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/select_background"
                android:background="@null"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_01"
                    style="@style/select_image_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/level_01"
                        android:text="Lv 1"
                        style="@style/select_level_style" />
                    <TextView
                        android:id="@+id/name_01"
                        android:text="낙뢰"
                        style="@style/select_name_style" />
                    <TextView
                        android:id="@+id/description_01"
                        android:text="주변 적에게 번개가 내리친다."
                        style="@style/select_description_style" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/secondOption"
            style="@style/select_option_frame_style"
            >

            <ImageButton
                android:id="@+id/secondItem"
                android:onClick="onBtnSelectAbility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/select_background"
                android:background="@null"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_02"
                    style="@style/select_image_style"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/level_02"
                        android:text="Lv 1"
                        style="@style/select_level_style"  />
                    <TextView
                        android:id="@+id/name_02"
                        android:text="낙뢰"
                        style="@style/select_name_style"
                        />
                    <TextView
                        android:id="@+id/description_02"
                        android:text="주변 적에게 번개가 내리친다."
                        style="@style/select_description_style"
                        />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/thirdOption"
            style="@style/select_option_frame_style"
            >

            <ImageButton
                android:id="@+id/thirdItem"
                android:onClick="onBtnSelectAbility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/select_background"
                android:background="@null"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_03"
                    style="@style/select_image_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/level_03"
                        android:text="Lv 1"
                        style="@style/select_level_style"
                        />
                    <TextView
                        android:id="@+id/name_03"
                        android:text="낙뢰"
                        style="@style/select_name_style"
                        />
                    <TextView
                        android:id="@+id/description_03"
                        android:text="주변 적에게 번개가 내리친다."
                        style="@style/select_description_style"
                        />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            >
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/select_background"
                android:background="@null"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="선택하지 않는다."
                android:textSize="17dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                />

        </FrameLayout>




    </LinearLayout>

</RelativeLayout>