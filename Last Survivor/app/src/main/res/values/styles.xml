<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="select_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="select_description_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="select_level_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/select_activity_next_level</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="select_image_style">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="select_option_frame_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
</resources>